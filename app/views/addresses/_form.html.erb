<%= form_with model: [ @person, @address ], local: false, id: "address-form" do |form| %>
  <div class="mb-2">
    <%= form.label :street, style: "display: block" %>
    <%= form.text_field :street, class:"form-control" %>
    <% @address.errors.full_messages_for(:street).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-2">
    <%= form.label :town, style: "display: block" %>
    <%= form.text_field :town, class:"form-control"%>
    <% @address.errors.full_messages_for(:town).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-2">
    <%= form.label :zip_code, style: "display: block" %>
    <%= form.text_field :zip_code, class:"form-control" %>
    <% @address.errors.full_messages_for(:zip_code).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  
  <div class="mb-2">
    <%= form.label :country, style: "display: block" %>
    <%= form.country_select :country, ([ "GB", "FR", "DE" ]), {iso_codes: true, id: :element_id}, {class:"form-select"}  %>
  </div>
  

  <div class="mb-2">
    <%= form.label :state, style: "display: block" %>
    <%= form.text_field :state, class:"form-control" %>
</div>

  <div>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>Save<% end %>
  </div>
<% end %>