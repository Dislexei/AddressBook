<p style="color: green"><%= notice %></p>
<div class = "row">
	<div class="column">
		<h2>Details</h2>
		<%= render @person %>
		<div>
			<ul>
				<li><%= link_to "Edit contact", edit_person_path(@person) %></li>
				<li><%= link_to "Delete contact", person_path(@person), 
				data: {
		                    turbo_method: :delete,
		                    turbo_confirm: "Are you sure?"
	                }%>
                </li>
            </ul>
		</div>
	</div>

	<div class="column">
		<h2>Addresses</h2>
		<%= render @person.addresses %>
		<h3>Add an address</h3>
		<%= render "addresses/form" %>
	</div>	

	<div class="column">
		<h2>Email addresses</h2>
		<%= render @person.emails %>

		<h3>Add an email address</h3>
		<%= render "emails/form" %>

		<h2>Phone numbers</h2>
		<%= render @person.phone_numbers %>
		<h3>Add an phone number</h3>
		<%= render "phone_numbers/form" %>
	</div>
	<%= link_to "Back to people", people_path %>
</div>


