<%= form_with model: [ @person, @phone_number ], local: false  do |form| %>
    <div class="mb-2">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class:"form-control" %>
    </div>
    <div class="mb-2">
      <%= form.label :comment %><br>
      <%= form.text_field :comment, class:"form-control" %>
    </div>
    <div class="mb-2">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>Save<% end %>
    </div>
    <% end %>