<div id="<%= dom_id phone_number %>">
  <p>
    <strong>Phone Number:</strong>
    <%= phone_number.phone_number %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= phone_number.comment %>
  </p>

  <%= link_to "Edit phone number", edit_person_phone_number_path(phone_number.person, phone_number), method: :get, remote: true %>
  <%= link_to "Destroy phone number", person_phone_number_path(phone_number.person, phone_number), method: :delete, remote:true %>
</div>
